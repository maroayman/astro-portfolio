---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import certificationsData from '../../data/certifications.json';
---

<Layout title="Certifications - Marwan Ayman Shawky">
  <Header />
  <main class="pt-24 pb-20 px-6 bg-white dark:bg-gray-950 min-h-screen">
    <div class="container mx-auto max-w-4xl">
      <h2 class="text-4xl font-bold mb-6 text-gray-900 dark:text-white">Certifications</h2>
      <div class="space-y-6">
        {certificationsData.map((cert) => (
          <section class="border border-gray-200 dark:border-gray-800 rounded-xl p-5 bg-white dark:bg-gray-950">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-50 mb-1">
              {cert.title}
            </h3>
            <p class="text-gray-700 dark:text-gray-300 text-sm mb-1">
              {cert.issuer}
            </p>
            <div class="flex flex-wrap gap-x-4 gap-y-1 text-gray-500 dark:text-gray-400 text-xs mb-3">
              <span>Issued: {cert.date}</span>
              {cert.expiryDate && (
                <span>Expires: {cert.expiryDate}</span>
              )}
              {cert.credentialId && (
                <span>ID: {cert.credentialId}</span>
              )}
            </div>
            {cert.link && (
              <a
                href={cert.link}
                target="_blank"
                class="text-sm text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium"
              >
                View credential
              </a>
            )}
          </section>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>
