---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import certificationsData from '../../data/certifications.json';

// Group certifications by issuer
const groupedCerts = certificationsData.reduce((acc, cert) => {
  if (!acc[cert.issuer]) {
    acc[cert.issuer] = [];
  }
  acc[cert.issuer].push(cert);
  return acc;
}, {} as Record<string, typeof certificationsData>);
---

<Layout title="Certifications - Marwan Ayman Shawky">
  <Header />
  <main class="pt-24 pb-20 px-6 bg-neutral-50 dark:bg-neutral-950 min-h-screen">
    <div class="container mx-auto max-w-6xl">
      <!-- Header -->
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1.5 bg-primary-500/10 text-primary-600 dark:text-primary-400 rounded-full text-sm font-medium mb-4">
          Credentials
        </span>
        <h1 class="text-4xl md:text-5xl font-bold text-neutral-900 dark:text-white mb-4">Certifications</h1>
        <p class="text-neutral-600 dark:text-neutral-400 max-w-xl mx-auto">
          Professional certifications and courses I've completed to enhance my cloud and DevOps expertise.
        </p>
      </div>
      
      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-16">
        <div class="bg-white dark:bg-neutral-900 rounded-2xl p-6 border border-neutral-200 dark:border-neutral-800 text-center">
          <div class="text-3xl font-bold text-primary-500 mb-1">{certificationsData.length}</div>
          <div class="text-neutral-600 dark:text-neutral-400 text-sm">Total Certifications</div>
        </div>
        <div class="bg-white dark:bg-neutral-900 rounded-2xl p-6 border border-neutral-200 dark:border-neutral-800 text-center">
          <div class="text-3xl font-bold text-primary-500 mb-1">{Object.keys(groupedCerts).length}</div>
          <div class="text-neutral-600 dark:text-neutral-400 text-sm">Issuers</div>
        </div>
        <div class="bg-white dark:bg-neutral-900 rounded-2xl p-6 border border-neutral-200 dark:border-neutral-800 text-center">
          <div class="text-3xl font-bold text-primary-500 mb-1">{certificationsData.filter(c => c.expiryDate).length}</div>
          <div class="text-neutral-600 dark:text-neutral-400 text-sm">Active Certs</div>
        </div>
        <div class="bg-white dark:bg-neutral-900 rounded-2xl p-6 border border-neutral-200 dark:border-neutral-800 text-center">
          <div class="text-3xl font-bold text-primary-500 mb-1">2025</div>
          <div class="text-neutral-600 dark:text-neutral-400 text-sm">Latest Year</div>
        </div>
      </div>
      
      <!-- Certifications by Issuer -->
      <div class="space-y-12">
        {Object.entries(groupedCerts).map(([issuer, certs]) => (
          <div>
            <div class="flex items-center gap-3 mb-6">
              <h2 class="text-xl font-bold text-neutral-900 dark:text-white">{issuer}</h2>
              <span class="px-2.5 py-1 bg-neutral-100 dark:bg-neutral-800 text-neutral-600 dark:text-neutral-400 text-xs rounded-full">
                {certs.length} cert{certs.length > 1 ? 's' : ''}
              </span>
            </div>
            
            <div class="space-y-3">
              {certs.map((cert) => (
                <div class="group p-6 bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-xl hover:border-primary-500/50 hover:bg-primary-500/5 dark:hover:bg-primary-500/10 transition-all">
                  <div class="flex items-start justify-between gap-2 mb-2">
                    <h3 class="text-base font-semibold text-neutral-900 dark:text-white">
                      {cert.title}
                    </h3>
                    {cert.expiryDate && (
                      <span class="px-2.5 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-xs rounded font-medium whitespace-nowrap flex-shrink-0">
                        Active
                      </span>
                    )}
                  </div>
                  
                  <p class="text-neutral-600 dark:text-neutral-400 text-sm mb-2 line-clamp-1">
                    {cert.description}
                  </p>
                  
                  <div class="flex flex-wrap items-center gap-4 text-sm text-neutral-500 dark:text-neutral-400">
                    <div class="flex items-center gap-1.5">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                      <span>{cert.date}</span>
                    </div>
                    
                    {cert.expiryDate && (
                      <div class="flex items-center gap-1.5">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span>{cert.expiryDate}</span>
                      </div>
                    )}
                    
                    {cert.credentialId && (
                      <div class="flex items-center gap-1.5">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                        </svg>
                        <span class="truncate">{cert.credentialId}</span>
                      </div>
                    )}
                  </div>
                  
                  {cert.link && (
                    <a
                      href={cert.link}
                      target="_blank"
                      class="inline-flex items-center gap-1.5 mt-3 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium text-sm group-hover:underline"
                    >
                      View Credential
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                      </svg>
                    </a>
                  )}
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>
