---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  class?: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
}

const { 
  src, 
  alt, 
  class: className,
  width,
  height,
  loading = 'lazy'
} = Astro.props;
---

<Image 
  src={src}
  alt={alt}
  class={className}
  width={width}
  height={height}
  loading={loading}
  format="webp"
  quality={85}
/>
