---
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => {
  // Personal projects first, then by period (newest first)
  if (a.data.category !== b.data.category) {
    return a.data.category === 'personal' ? -1 : 1;
  }
  return b.data.period.localeCompare(a.data.period);
});
---

<section id="projects" class="py-24 px-6 bg-neutral-50 dark:bg-neutral-950">
  <div class="container mx-auto max-w-5xl">
    <div class="mb-12">
      <span class="inline-block px-4 py-1.5 bg-primary-500/10 text-primary-600 dark:text-primary-400 rounded-full text-sm font-medium mb-4">
        Projects
      </span>
      <h2 class="text-4xl font-bold text-neutral-900 dark:text-white mb-4">Featured Work</h2>
      <p class="text-neutral-600 dark:text-neutral-400 max-w-xl">
        A selection of recent Cloud & DevOps projects showcasing infrastructure automation and CI/CD pipelines.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6">
      {sortedProjects.slice(0, 2).map((project) => (
        <a
          href={`/projects/${project.data.slug}`}
          class="group bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-2xl p-6 hover:border-primary-500/50 hover:shadow-xl hover:shadow-primary-500/5 transition-all"
        >
          <h3 class="text-xl font-bold text-neutral-900 dark:text-white mb-3 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
            {project.data.title}
          </h3>
          
          <p class="text-neutral-600 dark:text-neutral-400 text-sm mb-4 line-clamp-2">
            {project.data.summary}
          </p>
          
          <div class="flex flex-wrap gap-2 mb-4">
            {project.data.tech.slice(0, 4).map((tech) => (
              <span class="px-3 py-1 bg-neutral-100 dark:bg-neutral-800 text-neutral-600 dark:text-neutral-400 rounded-lg text-xs font-medium">
                {tech}
              </span>
            ))}
          </div>
          
          <span class="inline-flex items-center gap-2 text-sm font-medium text-primary-600 dark:text-primary-400">
            View project
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </span>
        </a>
      ))}
    </div>
    
    <div class="mt-8">
      <a href="/projects" class="inline-flex items-center gap-2 px-6 py-3 bg-neutral-100 dark:bg-neutral-800 text-neutral-900 dark:text-white rounded-xl font-medium hover:bg-primary-500 hover:text-white transition-all">
        View All Projects
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>
