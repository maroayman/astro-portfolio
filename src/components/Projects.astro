---
import projectsData from '../data/projects.json';

const allProjects = [...projectsData.personal, ...projectsData.academic];
---

<section id="projects" class="py-20 px-6 bg-gray-50 dark:bg-gray-900">
  <div class="container mx-auto max-w-6xl">
    <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Projects</h2>
    <p class="text-gray-600 dark:text-gray-300 mb-8 max-w-2xl">
      A selection of recent Cloud & DevOps projects. Visit the projects page to see more details.
    </p>
    <div class="grid md:grid-cols-2 gap-6">
      {allProjects.slice(0, 2).map((project) => (
        <a
          href={`/projects/${project.slug}`}
          class="group bg-white dark:bg-gray-950 border border-gray-200 dark:border-gray-800 rounded-xl p-6 hover:border-primary-500/70 dark:hover:border-primary-400/70 hover:shadow-lg hover:shadow-primary-500/10 transition-all"
        >
          <div class="flex items-start justify-between mb-3">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-50 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
              {project.title}
            </h3>
          </div>
          <p class="text-gray-700 dark:text-gray-300 text-sm mb-4 line-clamp-3">
            {project.summary}
          </p>
          <div class="flex flex-wrap gap-2 mb-4">
            {project.tech.slice(0, 4).map((tech) => (
              <span class="px-2 py-1 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-200 text-xs">
                {tech}
              </span>
            ))}
          </div>
          <span class="inline-flex items-center text-sm font-medium text-primary-600 dark:text-primary-400 group-hover:gap-2 transition-all">
            View project
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </a>
      ))}
    </div>
    <a
      href="/projects"
      class="mt-8 inline-block text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium"
    >
      View all projects
    </a>
  </div>
</section>
