---
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => {
  // Personal projects first, then by period (newest first)
  if (a.data.category !== b.data.category) {
    return a.data.category === 'personal' ? -1 : 1;
  }
  return b.data.period.localeCompare(a.data.period);
});
---

<section id="projects" class="py-24 px-6 bg-neutral-50 dark:bg-neutral-950">
  <div class="container mx-auto max-w-5xl">
    <div class="text-center mb-12">
      <span class="inline-block px-4 py-1.5 bg-primary-500/10 text-primary-600 dark:text-primary-400 rounded-full text-sm font-medium mb-4">
        Projects
      </span>
      <h2 class="text-4xl font-bold text-neutral-900 dark:text-white mb-4">Featured Work</h2>
      <p class="text-neutral-600 dark:text-neutral-400 max-w-xl mx-auto">
        A selection of recent Cloud & DevOps projects showcasing infrastructure automation and CI/CD pipelines.
      </p>
    </div>
    
    <div class="space-y-4">
      {sortedProjects.slice(0, 2).map((project, index) => (
        <details class="group bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-2xl overflow-hidden hover:border-primary-500/50 transition-all" data-project-index={index}>
          <summary class="cursor-pointer px-6 py-5 flex items-center justify-between hover:bg-primary-500/5 dark:hover:bg-primary-500/10 transition-colors">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-primary-500/10 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  <h3 class="text-lg font-semibold text-neutral-900 dark:text-white">
                    {project.data.title}
                  </h3>
                  <span class="px-2 py-0.5 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-400 text-xs rounded font-medium">
                    {project.data.category === 'personal' ? 'Personal' : 'Work'}
                  </span>
                </div>
                <div class="flex items-center gap-2 text-sm">
                  <span class="text-primary-600 dark:text-primary-400 font-medium">
                    {project.data.role || 'Developer'}
                  </span>
                  <span class="text-neutral-400">·</span>
                  <span class="text-neutral-500 dark:text-neutral-400">
                    {project.data.period}
                  </span>
                </div>
              </div>
            </div>
            
            <svg class="w-5 h-5 text-neutral-400 group-open:text-primary-500 group-open:rotate-180 transition-all ml-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          
          <div class="px-6 py-5 border-t border-neutral-200 dark:border-neutral-700 bg-neutral-50 dark:bg-neutral-800">
            <p class="text-neutral-600 dark:text-neutral-300 mb-5">
              {project.data.description}
            </p>
            
            {project.data.highlights && project.data.highlights.length > 0 && (
              <div class="mb-5 highlights-container">
                <h4 class="text-sm font-semibold text-neutral-700 dark:text-neutral-300 mb-3 flex items-center gap-2">
                  <svg class="w-4 h-4 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Key Highlights
                </h4>
                <ul class="space-y-2 highlights-list">
                  {project.data.highlights.slice(0, 4).map((item) => (
                    <li class="flex items-start gap-2 text-sm text-neutral-600 dark:text-neutral-400">
                      <span class="text-primary-500 mt-1">•</span>
                      {item}
                    </li>
                  ))}
                </ul>
                {project.data.highlights.length > 4 && (
                  <div class="hidden-highlights mt-2 hidden">
                    <ul class="space-y-2">
                      {project.data.highlights.slice(4).map((item) => (
                        <li class="flex items-start gap-2 text-sm text-neutral-600 dark:text-neutral-400">
                          <span class="text-primary-500 mt-1">•</span>
                          {item}
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
                {project.data.highlights.length > 4 && (
                  <button type="button" class="show-more-btn mt-3 text-sm text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium flex items-center gap-1 transition-colors">
                    <span class="btn-text">Show {project.data.highlights.length - 4} more</span>
                    <svg class="w-4 h-4 btn-icon transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </button>
                )}
              </div>
            )}
            
            <div class="flex flex-wrap gap-2 mb-5">
              {project.data.tech.map((tech) => (
                <span class="px-3 py-1 bg-white dark:bg-neutral-900 text-neutral-600 dark:text-neutral-400 rounded-lg text-sm border border-neutral-200 dark:border-neutral-700">
                  {tech}
                </span>
              ))}
            </div>
            
            <a href={`/projects/${project.data.slug}`} class="inline-flex items-center gap-2 text-sm font-medium text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors">
              View full project
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </details>
      ))}
    </div>
    
    <div class="text-center mt-8">
      <a href="/projects" class="inline-flex items-center gap-2 px-6 py-3 bg-neutral-100 dark:bg-neutral-800 text-neutral-900 dark:text-white rounded-xl font-medium hover:bg-primary-500 hover:text-white transition-all">
        View All Projects
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  document.querySelectorAll('.show-more-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const container = btn.closest('.highlights-container');
      const hiddenHighlights = container?.querySelector('.hidden-highlights');
      const btnText = btn.querySelector('.btn-text');
      const btnIcon = btn.querySelector('.btn-icon');
      
      if (hiddenHighlights) {
        hiddenHighlights.classList.toggle('hidden');
        const isExpanded = !hiddenHighlights.classList.contains('hidden');
        if (btnText) btnText.textContent = isExpanded ? 'Show less' : btnText.textContent;
        if (btnIcon) btnIcon.style.transform = isExpanded ? 'rotate(180deg)' : '';
      }
    });
  });
</script>
