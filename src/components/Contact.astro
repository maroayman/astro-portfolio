<section id="contact" class="py-24 px-6 bg-neutral-100 dark:bg-neutral-900">
  <div class="container mx-auto max-w-5xl">
    <div class="text-center mb-12">
      <span class="inline-block px-4 py-1.5 bg-primary-500/10 text-primary-600 dark:text-primary-400 rounded-full text-sm font-medium mb-4">
        Contact
      </span>
      <h2 class="text-4xl font-bold text-neutral-900 dark:text-white mb-4">Let's Work Together</h2>
      <p class="text-neutral-600 dark:text-neutral-400 max-w-xl mx-auto">
        I'm always open to discussing new opportunities and interesting projects.
      </p>
    </div>
    
    <div class="grid lg:grid-cols-5 gap-8">
      <!-- Contact Info -->
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white dark:bg-neutral-800 rounded-2xl p-6 border border-neutral-200 dark:border-neutral-700">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 bg-primary-500/10 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-neutral-500 dark:text-neutral-400">Email</p>
              <a href="mailto:marwanayman.shawky@gmail.com" class="text-neutral-900 dark:text-white font-medium hover:text-primary-500 transition-colors">
                marwanayman.shawky@gmail.com
              </a>
            </div>
          </div>
        </div>
        
        <div class="bg-white dark:bg-neutral-800 rounded-2xl p-6 border border-neutral-200 dark:border-neutral-700">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 bg-primary-500/10 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-neutral-500 dark:text-neutral-400">Phone</p>
              <a href="tel:+201122889126" class="text-neutral-900 dark:text-white font-medium hover:text-primary-500 transition-colors">
                +20 112 288 9126
              </a>
            </div>
          </div>
        </div>
        
        <div class="bg-white dark:bg-neutral-800 rounded-2xl p-6 border border-neutral-200 dark:border-neutral-700">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-primary-500/10 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-neutral-500 dark:text-neutral-400">Location</p>
              <p class="text-neutral-900 dark:text-white font-medium">Cairo, Egypt</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Contact Form -->
      <div class="lg:col-span-3">
        <form 
          id="contact-form"
          action="https://formsubmit.co/ajax/marwanayman.shawky@gmail.com" 
          method="POST"
          class="bg-white dark:bg-neutral-800 rounded-2xl p-8 border border-neutral-200 dark:border-neutral-700"
        >
          <!-- FormSubmit Configuration -->
          <input type="hidden" name="_subject" value="New Portfolio Contact!">
          <input type="hidden" name="_captcha" value="false">
          <input type="text" name="_honey" style="display:none">
          
          <!-- Success Message (hidden by default) -->
          <div id="success-message" class="hidden mb-6 p-4 bg-primary-500/10 border border-primary-500/20 rounded-xl">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-primary-500 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-primary-600 dark:text-primary-400">Message Sent!</p>
                <p class="text-sm text-neutral-600 dark:text-neutral-400">Thanks for reaching out. I'll get back to you soon.</p>
              </div>
            </div>
          </div>
          
          <!-- Error Message (hidden by default) -->
          <div id="error-message" class="hidden mb-6 p-4 bg-red-500/10 border border-red-500/20 rounded-xl">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-red-600 dark:text-red-400">Something went wrong</p>
                <p class="text-sm text-neutral-600 dark:text-neutral-400">Please try again or email me directly.</p>
              </div>
            </div>
          </div>
          
          <div id="form-fields">
            <div class="grid md:grid-cols-2 gap-6 mb-6">
              <div>
                <label for="name" class="block text-neutral-700 dark:text-neutral-200 text-sm mb-2 font-medium">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 bg-neutral-50 dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-700 rounded-xl text-neutral-900 dark:text-neutral-100 focus:outline-none focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all"
                  placeholder="John Doe"
                />
              </div>
              <div>
                <label for="email" class="block text-neutral-700 dark:text-neutral-200 text-sm mb-2 font-medium">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 bg-neutral-50 dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-700 rounded-xl text-neutral-900 dark:text-neutral-100 focus:outline-none focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all"
                  placeholder="john@example.com"
                />
              </div>
            </div>
            <div class="mb-6">
              <label for="subject" class="block text-neutral-700 dark:text-neutral-200 text-sm mb-2 font-medium">Subject</label>
              <input
                type="text"
                id="subject"
                name="subject"
                class="w-full px-4 py-3 bg-neutral-50 dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-700 rounded-xl text-neutral-900 dark:text-neutral-100 focus:outline-none focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all"
                placeholder="Project inquiry"
              />
            </div>
            <div class="mb-6">
              <label for="message" class="block text-neutral-700 dark:text-neutral-200 text-sm mb-2 font-medium">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 bg-neutral-50 dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-700 rounded-xl text-neutral-900 dark:text-neutral-100 focus:outline-none focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all resize-none"
                placeholder="Tell me about your project..."
              ></textarea>
            </div>
            <button
              type="submit"
              id="submit-btn"
              class="w-full px-6 py-4 bg-primary-500 hover:bg-primary-600 text-white rounded-xl font-semibold transition-all hover:shadow-lg hover:shadow-primary-500/25 flex items-center justify-center gap-2"
            >
              <span id="btn-text">Send Message</span>
              <svg id="btn-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
              <svg id="btn-spinner" class="hidden w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form') as HTMLFormElement | null;
    const formFields = document.getElementById('form-fields');
    const successMessage = document.getElementById('success-message');
    const errorMessage = document.getElementById('error-message');
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement | null;
    const btnText = document.getElementById('btn-text');
    const btnIcon = document.getElementById('btn-icon');
    const btnSpinner = document.getElementById('btn-spinner');

    if (!form || !formFields || !successMessage || !errorMessage || !submitBtn || !btnText || !btnIcon || !btnSpinner) {
      return;
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Hide any previous error message
      errorMessage.classList.add('hidden');
      
      // Show loading state
      submitBtn.disabled = true;
      btnText.textContent = 'Sending...';
      btnIcon.classList.add('hidden');
      btnSpinner.classList.remove('hidden');
      
      const formData = new FormData(form);
      
      try {
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });
        
        // Parse response as JSON to validate it's a proper response
        const data = await response.json();
        
        if (response.ok && data.success !== false) {
          // Show success animation
          formFields.classList.add('hidden');
          successMessage.classList.remove('hidden');
          form.reset();
        } else {
          throw new Error(data.message || 'Form submission failed');
        }
      } catch (error) {
        // Show error
        errorMessage.classList.remove('hidden');
        // Reset button
        submitBtn.disabled = false;
        btnText.textContent = 'Send Message';
        btnIcon.classList.remove('hidden');
        btnSpinner.classList.add('hidden');
      }
    });
  });
</script>

