---
import experienceData from '../data/experience.json';
---

<section id="experience" class="py-20 px-6 bg-white dark:bg-gray-950">
  <div class="container mx-auto max-w-4xl">
    <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">Work Experience</h2>
    <div class="space-y-6">
      {experienceData.slice(0, 2).map((exp) => (
        <div class="bg-gray-50 dark:bg-gray-900 rounded-2xl p-6 border border-gray-200 dark:border-gray-800">
          <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-3">
            <div>
              <div class="flex items-center gap-2 flex-wrap mb-1">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-50">{exp.title}</h3>
                {exp.isPromotion && (
                  <span class="px-2 py-0.5 bg-gradient-to-r from-green-500 to-emerald-500 text-white text-xs font-semibold rounded-full">
                    â†‘ Promoted
                  </span>
                )}
              </div>
              {exp.companyUrl ? (
                <a href={exp.companyUrl} target="_blank" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium">
                  {exp.company}
                </a>
              ) : (
                <p class="text-gray-700 dark:text-gray-300 font-medium">{exp.company}</p>
              )}
              <p class="text-gray-500 dark:text-gray-400 text-sm">{exp.location}</p>
            </div>
            <span class="text-gray-500 dark:text-gray-400 text-sm mt-2 md:mt-0 font-medium">{exp.period}</span>
          </div>
          <p class="text-gray-700 dark:text-gray-300 mb-4">{exp.description}</p>
          <div class="flex flex-wrap gap-2">
            {exp.tags.map((tag) => (
              <span class="px-3 py-1 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-200 rounded-lg text-sm border border-gray-200 dark:border-gray-700">
                {tag}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
    <a href="/experience" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium mt-6 inline-block">
      View all experience
    </a>
  </div>
</section>
