---
import { getCollection } from 'astro:content';

const experienceData = await getCollection('experience');
const sortedExperience = experienceData.sort((a, b) => a.id.localeCompare(b.id));
---

<section id="experience" class="py-24 px-6 bg-white dark:bg-neutral-900">
  <div class="container mx-auto max-w-5xl">
    <div class="text-center mb-12">
      <span class="inline-block px-4 py-1.5 bg-primary-500/10 text-primary-600 dark:text-primary-400 rounded-full text-sm font-medium mb-4">
        Experience
      </span>
      <h2 class="text-4xl font-bold text-neutral-900 dark:text-white mb-4">Work Experience</h2>
    </div>
    
    <div class="space-y-6">
      {sortedExperience.slice(0, 2).map((exp, index) => (
        <div class="group bg-neutral-50 dark:bg-neutral-800 rounded-2xl p-6 border border-neutral-200 dark:border-neutral-700 hover:border-primary-500/50 transition-all">
          <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4 mb-4">
            <div>
              <div class="flex items-center gap-3 flex-wrap mb-2">
                <h3 class="text-xl font-bold text-neutral-900 dark:text-white">{exp.data.title}</h3>
                {exp.data.promotion && (
                  <span class="px-2.5 py-1 bg-gradient-to-r from-primary-500 to-emerald-500 text-white text-xs font-semibold rounded-full flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
                    </svg>
                    Promoted
                  </span>
                )}
              </div>
              {exp.data.companyUrl ? (
                <a href={exp.data.companyUrl} target="_blank" class="text-primary-600 dark:text-primary-400 hover:underline font-medium">
                  {exp.data.company}
                </a>
              ) : (
                <p class="text-neutral-700 dark:text-neutral-300 font-medium">{exp.data.company}</p>
              )}
              <p class="text-neutral-500 dark:text-neutral-400 text-sm mt-1">{exp.data.location}</p>
            </div>
            <span class="px-4 py-2 bg-neutral-100 dark:bg-neutral-700 text-neutral-600 dark:text-neutral-300 text-sm rounded-full font-medium whitespace-nowrap">
              {exp.data.period}
            </span>
          </div>
          
          <p class="text-neutral-600 dark:text-neutral-300 mb-4">{exp.data.description}</p>
          
          <div class="flex flex-wrap gap-2">
            {exp.data.tags.map((tag) => (
              <span class="px-3 py-1 bg-white dark:bg-neutral-900 text-neutral-600 dark:text-neutral-400 rounded-lg text-sm border border-neutral-200 dark:border-neutral-700">
                {tag}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-8">
      <a href="/experience" class="inline-flex items-center gap-2 px-6 py-3 bg-neutral-100 dark:bg-neutral-800 text-neutral-900 dark:text-white rounded-xl font-medium hover:bg-primary-500 hover:text-white transition-all">
        View All Experience
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>
