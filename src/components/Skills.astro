---
const skillCategories = [
  {
    title: "Cloud Platforms",
    skills: ["AWS", "Azure", "GCP", "Huawei Cloud"],
    color: "from-blue-500 to-cyan-500"
  },
  {
    title: "DevOps & CI/CD",
    skills: ["Docker", "Kubernetes", "Jenkins", "GitHub Actions", "ArgoCD"],
    color: "from-purple-500 to-pink-500"
  },
  {
    title: "Infrastructure as Code",
    skills: ["Terraform", "Ansible", "Helm"],
    color: "from-orange-500 to-red-500"
  },
  {
    title: "Programming",
    skills: ["Python", "Go", "Java", "Bash"],
    color: "from-green-500 to-emerald-500"
  },
  {
    title: "Databases",
    skills: ["MySQL", "MariaDB", "SQLite", "SQL Server"],
    color: "from-yellow-500 to-orange-500"
  },
  {
    title: "Monitoring & Observability",
    skills: ["Prometheus", "Grafana", "PowerBI"],
    color: "from-indigo-500 to-purple-500"
  },
];
---

<section id="skills" class="py-20 px-6 bg-gray-50 dark:bg-gray-900">
  <div class="container mx-auto max-w-6xl">
    <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Skills & Technologies</h2>
    <p class="text-gray-600 dark:text-gray-400 mb-10 max-w-2xl">
      Tools and technologies I use to build scalable cloud infrastructure and automate deployments.
    </p>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {skillCategories.map((category) => (
        <div class="group relative bg-white dark:bg-gray-950 rounded-2xl p-6 border border-gray-200 dark:border-gray-800 hover:border-transparent hover:shadow-xl transition-all duration-300 overflow-hidden">
          {/* Gradient border on hover */}
          <div class={`absolute inset-0 bg-gradient-to-r ${category.color} opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-2xl`}></div>
          <div class="absolute inset-[2px] bg-white dark:bg-gray-950 rounded-2xl"></div>
          
          <div class="relative z-10">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-50 mb-4">
              {category.title}
            </h3>
            <div class="flex flex-wrap gap-2">
              {category.skills.map((skill) => (
                <span class="px-3 py-1.5 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg text-sm font-medium hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors cursor-default">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
