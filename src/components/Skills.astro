---
const skillCategories = [
  {
    title: "Cloud Platforms",
    skills: ["AWS", "Azure", "GCP", "Huawei Cloud"],
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/>'
  },
  {
    title: "DevOps & CI/CD",
    skills: ["Docker", "Kubernetes", "Jenkins", "GitHub Actions", "ArgoCD"],
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>'
  },
  {
    title: "Infrastructure as Code",
    skills: ["Terraform", "Ansible", "Helm"],
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>'
  },
  {
    title: "Programming",
    skills: ["Python", "Go", "Java", "Bash"],
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>'
  },
  {
    title: "Databases",
    skills: ["MySQL", "MariaDB", "SQLite", "SQL Server"],
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>'
  },
  {
    title: "Monitoring & Observability",
    skills: ["Prometheus", "Grafana", "ELK Stack"],
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>'
  },
];
---

<section id="skills" class="py-24 px-6 bg-neutral-50 dark:bg-neutral-950">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-12">
      <span class="inline-block px-4 py-1.5 bg-primary-500/10 text-primary-600 dark:text-primary-400 rounded-full text-sm font-medium mb-4">
        Skills
      </span>
      <h2 class="text-4xl font-bold text-neutral-900 dark:text-white mb-4">Technologies I Work With</h2>
      <p class="text-neutral-600 dark:text-neutral-400 max-w-xl mx-auto">
        Tools and technologies I use to build scalable cloud infrastructure and automate deployments.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {skillCategories.map((category) => (
        <div class="group bg-white dark:bg-neutral-900 rounded-2xl p-6 border border-neutral-200 dark:border-neutral-800 hover:border-primary-500/50 hover:shadow-xl hover:shadow-primary-500/5 transition-all duration-300">
          <div class="w-12 h-12 bg-primary-500/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-primary-500 group-hover:text-white transition-colors">
            <svg class="w-6 h-6 text-primary-500 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={category.icon} />
          </div>
          <h3 class="text-lg font-semibold text-neutral-900 dark:text-white mb-4">
            {category.title}
          </h3>
          <div class="flex flex-wrap gap-2">
            {category.skills.map((skill) => (
              <span class="px-3 py-1.5 bg-neutral-100 dark:bg-neutral-800 text-neutral-700 dark:text-neutral-300 rounded-lg text-sm font-medium">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
