---
import certificationsData from '../data/certifications.json';
---

<section id="certifications" class="py-24 px-6 bg-white dark:bg-neutral-900">
  <div class="container mx-auto max-w-5xl">
    <div class="mb-12">
      <span class="inline-block px-4 py-1.5 bg-primary-500/10 text-primary-600 dark:text-primary-400 rounded-full text-sm font-medium mb-4">
        Credentials
      </span>
      <h2 class="text-4xl font-bold text-neutral-900 dark:text-white mb-4">Certifications</h2>
      <p class="text-neutral-600 dark:text-neutral-400 max-w-xl">
        Professional certifications validating my cloud and DevOps expertise.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6">
      {certificationsData.slice(0, 4).map((cert) => (
        <div class="group bg-neutral-50 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 rounded-2xl p-6 hover:border-primary-500/50 hover:shadow-xl hover:shadow-primary-500/5 transition-all">
          <div class="flex items-start justify-between gap-4 mb-3">
            <div class="w-10 h-10 bg-primary-500/10 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:bg-primary-500 transition-colors">
              <svg class="w-5 h-5 text-primary-500 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
              </svg>
            </div>
            {cert.expiryDate && (
              <span class="px-2.5 py-1 bg-primary-500/10 text-primary-600 dark:text-primary-400 text-xs rounded-full font-medium">
                Valid
              </span>
            )}
          </div>
          
          <h3 class="text-lg font-semibold text-neutral-900 dark:text-white mb-1">
            {cert.title}
          </h3>
          <p class="text-primary-600 dark:text-primary-400 text-sm font-medium mb-2">
            {cert.issuer}
          </p>
          <p class="text-neutral-500 dark:text-neutral-400 text-sm">
            Issued: {cert.date}
          </p>
        </div>
      ))}
    </div>
    
    <div class="mt-8">
      <a href="/certifications" class="inline-flex items-center gap-2 px-6 py-3 bg-neutral-100 dark:bg-neutral-800 text-neutral-900 dark:text-white rounded-xl font-medium hover:bg-primary-500 hover:text-white transition-all">
        View All Certifications
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>
