---
import { getCollection } from 'astro:content';

const certificationsData = await getCollection('certifications');
const sortedCerts = certificationsData.sort((a, b) => a.id.localeCompare(b.id));
---

<section id="certifications" class="py-24 px-6 bg-white dark:bg-neutral-900">
  <div class="container mx-auto max-w-5xl">
    <div class="mb-12">
      <span class="inline-block px-4 py-1.5 bg-primary-500/10 text-primary-600 dark:text-primary-400 rounded-full text-sm font-medium mb-4">
        Credentials
      </span>
      <h2 class="text-4xl font-bold text-neutral-900 dark:text-white mb-4">Certifications</h2>
      <p class="text-neutral-600 dark:text-neutral-400 max-w-xl">
        Professional certifications validating my cloud and DevOps expertise.
      </p>
    </div>
    
    <div class="space-y-4">
      {sortedCerts.slice(0, 3).map((cert) => (
        <div class="group p-6 bg-neutral-50 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 rounded-xl hover:border-primary-500/50 hover:bg-primary-500/5 dark:hover:bg-primary-500/10 transition-all">
          <div class="flex items-start justify-between gap-2 mb-2">
            <h3 class="text-base font-semibold text-neutral-900 dark:text-white">
              {cert.data.title}
            </h3>
            {cert.data.expiryDate && (
              <span class="px-2.5 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-xs rounded font-medium whitespace-nowrap">
                Active
              </span>
            )}
          </div>
          <p class="text-primary-600 dark:text-primary-400 text-sm font-medium mb-1">
            {cert.data.issuer}
          </p>
          <p class="text-neutral-500 dark:text-neutral-400 text-sm">
            {cert.data.date}
          </p>
        </div>
      ))}
    </div>
    
    <div class="mt-8">
      <a href="/certifications" class="inline-flex items-center gap-2 px-6 py-3 bg-neutral-100 dark:bg-neutral-800 text-neutral-900 dark:text-white rounded-xl font-medium hover:bg-primary-500 hover:text-white transition-all">
        View All Certifications
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>
